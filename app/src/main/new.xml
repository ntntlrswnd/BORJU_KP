<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".admin.DetailMenuActivity">

    <com.google.android.material.appbar.AppBarLayout android:id="@+id/appBarLayout"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar_detail"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back" <!-- Pastikan Anda punya icon ini -->
        tools:title="Detail Menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"> <!-- Padding agar tidak tertutup tombol -->

            <ImageView android:id="@+id/iv_detail_menu_image" android:layout_width="0dp"
                android:layout_height="250dp" android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView android:id="@+id/tv_detail_menu_name" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_margin="16dp"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_menu_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" tools:text="Nama Menu Super Panjang" />

            <TextView android:id="@+id/tv_detail_menu_price" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                android:textSize="20sp" android:textColor="@color/Primary"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_menu_name"
                app:layout_constraintStart_toStartOf="@id/tv_detail_menu_name"
                tools:text="Rp 25.000" />

            <TextView android:id="@+id/tv_detail_menu_description" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_menu_price"
                app:layout_constraintStart_toStartOf="@id/tv_detail_menu_name"
                app:layout_constraintEnd_toEndOf="@id/tv_detail_menu_name"
                tools:text="Deskripsi lengkap tentang menu ini. Rasanya enak, porsinya pas, dibuat dari bahan-bahan berkualitas terbaik dan dimasak oleh chef berpengalaman." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton android:id="@+id/btn_add_to_cart_detail"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:text="Tambah ke Keranjang"
        android:layout_margin="16dp" android:padding="12dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>