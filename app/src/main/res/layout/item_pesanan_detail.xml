<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_detail_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="1x" />

        <TextView
            android:id="@+id/tv_detail_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            tools:text="Nama Menu Pesanan" />

        <TextView
            android:id="@+id/tv_detail_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="Rp 25.000" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_item_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp" 
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone" 
        tools:visibility="visible"
        tools:text="Catatan: tidak pedas, es sedikit" />

</LinearLayout>