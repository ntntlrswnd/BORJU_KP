<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opsi Cetak Laporan"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rentang Waktu" />

    <RadioGroup
        android:id="@+id/rg_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semua Waktu" 
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rb_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Rentang Tanggal" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/date_pickers_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <Button
            android:id="@+id/btn_dialog_start_date"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dari"/>
            
        <Button
            android:id="@+id/btn_dialog_end_date"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Sampai"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipe Transaksi" />

    <Spinner
        android:id="@+id/spinner_dialog_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>